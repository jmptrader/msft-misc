@if (ticketList == null)
{
    <p><em>Loading...</em></p>
}
else
{
        <div class="container">
            <table class='table'>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Full Name</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in ticketList)
                    {
                        <tr>
                            <td>@ticket.Id</td>
                            <td>@ticket.Date</td>
                            <td>@ticket.FullName</td>
                            <td>@ticket.Email</td>
                            <td>
                                <a href='/ticket/edit/@ticket.Id'>Edit</a>  |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
}