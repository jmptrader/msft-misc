@page "/ticket/{action}/{paramContactId}"
@page "/ticket/{action}"
@inherits TicketDataModel

<h1>@title</h1>

<ErrorAlert Error=@Error />

@if (action == "fetch")
{
    <p>
        <a href="/ticket/create">Create New</a>
    </p>
}

@if (action == "create" || action == "edit")
{
    <form>
        <table class="form-group">
            <tr>
                <td>
                    <label for="FullName" class="control-label">Full Name</label>
                </td>
                <td>
                    <input type="text" class="form-control" bind="@ticket.FullName" />
                </td>
                <td>
                    <label for="Email" class="control-label">Email</label>
                </td>
                <td>
                    <input type="text" class="form-control" bind="@ticket.Email" />
                </td>
                <td>
                    <label for="Description" class="control-label">Description</label>
                </td>
                <td>
                    <input type="text" class="form-control" bind="@ticket.Description" />
                </td>
                <td>
                    <input type="submit" class="btn btn-success" onclick="@(async () => await CreateTicket())" style="width:220px;" value="Save" />
                </td>
                <td>
                    <input type="submit" class="btn btn-danger" onclick="@Cancel" style="width:220px;" value="Cancel" />
                </td>
            </tr>
        </table>
    </form>
}
